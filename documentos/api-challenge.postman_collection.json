							"// Verifica si la solicitud fue exitosa (c√≥digo de respuesta 200)",
							"if (responseCode.code === 200) {",
							"    // Se extrae el token de acceso del cuerpo de la respuesta",
							"    var responseBody = pm.response.json();",
							"    var accessToken = responseBody.token.token;",
							"",
							"    // Se almacena el token de acceso en el environment",
							"    pm.environment.set(\"access_token\", accessToken);",
							"}"
						],
